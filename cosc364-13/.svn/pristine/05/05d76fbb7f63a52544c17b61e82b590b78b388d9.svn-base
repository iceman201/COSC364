def config_router1():
    o1 = open('Outputs_1.txt', 'r')
    op = open('Port.txt','r')
    oi = open('Router-ID.txt','r')
    result = open('config.txt','w')
    
    ID = oi.readline()
    PORT = op.readline().split(',')
