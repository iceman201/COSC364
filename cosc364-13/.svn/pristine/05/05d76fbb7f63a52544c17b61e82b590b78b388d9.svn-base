def crate_Output_2():
    o = open('Outputs_1.txt', 'r') #input
    p = open('Port.txt','r')
    o2 = open('Output2.txt', 'w')

    ID1 = o.readlines()
    portno = p.readline().split(',') #picks first, change later?
    ID = []
    for line1 in ID1:
        ID.append(line1.split('-'))
        list_indices = int(ID[-1][-1]) - 1
        o2.write(str(portno[list_indices]) + '-' + str(ID[-1][-2])+ '-' + str(ID[-1][-1]))
    return 0
